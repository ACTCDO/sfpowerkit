{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017","DOM"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "outDir": "./lib",
    "rootDir": "./src",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
